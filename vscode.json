{
  "editor.suggestLineHeight": 30,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.detectIndentation": false,
  "eslint.alwaysShowStatus": true,
  "window.openFilesInNewWindow": "off",
  "editor.cursorBlinking": "expand",
  "editor.formatOnSave": true,
  "html.format.enable": true,
  "css.format.enable": true,
  "workbench.editor.tabSizing": "shrink",
  "editor.cursorWidth": 2,
  "extensions.ignoreRecommendations": false,
  "editor.matchBrackets": "always",
  "editor.minimap.showSlider": "always",
  "window.closeWhenEmpty": true,
  "workbench.startupEditor": "none",
  "editor.fontSize": 15,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        },
      }
    ]
  },
  "editor.lineHeight": 24,
  "files.trimTrailingWhitespace": true,
  "html.format.preserveNewLines": true,
  "editor.useTabStops": true,
  "terminal.integrated.fontSize": 15,
  "debug.console.fontSize": 14,
  "debug.console.wordWrap": true,
  "debug.console.collapseIdenticalLines": true,
  "workbench.editor.enablePreview": true,
  "editor.autoIndent": "full",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.multiCursorModifier": "ctrlCmd",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.find.seedSearchStringFromSelection": "always",
  "editor.minimap.enabled": false,
  "files.insertFinalNewline": true,
  "editor.showFoldingControls": "always",
  "editor.formatOnPaste": true,
  "editor.tabSize": 2,
  "editor.fontFamily": "'MonoLisa'",
  "editor.fontWeight": "400",
  "editor.fontLigatures": true,
  "editor.accessibilitySupport": "off",
  "editor.colorDecorators": true,
  "editor.scrollBeyondLastLine": true,
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "editor.wordWrap": "on",
  "editor.cursorStyle": "line",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "explorer.confirmDragAndDrop": false,
  "editor.inlineSuggest.enabled": true,
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [
      80
    ],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off",
    "editor.wordWrap": "on",
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "workbench.iconTheme": "material-icon-theme",
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": false,
    "scminput": false,
    "yaml": true
  },
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  "diffEditor.codeLens": true,
  "git.mergeEditor": false,
  "material-icon-theme.folders.color": "#42a5f5",
  "material-icon-theme.hidesExplorerArrows": false,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.suggest.showColors": true,
  "dart.hotReloadOnSave": "all",
  "dart.previewFlutterUiGuides": true,
  "dart.previewFlutterUiGuidesCustomTracking": true,
  "dart.closingLabels": true,
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "dart.debugExternalPackageLibraries": false,
  "dart.debugSdkLibraries": false,
  "dart.flutterSdkPath": ".fvm/flutter_sdk",
  // Remove .fvm files from search
  "search.exclude": {
    "**/.fvm": true
  },
  // Remove from file watching
  "files.watcherExclude": {
    "**/.fvm": true
  },
  "comment-divider.shouldLengthIncludeIndent": true,
  "terminal.integrated.profiles.osx": {
    "rosetta": {
      "path": "arch",
      "args": [
        "-x86_64",
        "zsh",
        "-l"
      ],
      "overrideName": true
    },
  },
  // StatusBar color:
  "workbench.colorCustomizations": {
    "statusBar.debuggingBackground": "#7CCC6C",
    "statusBar.debuggingForeground": "#000000",
    "terminalCursor.foreground": "#00ffaa"
  },
  "terminal.integrated.cursorBlinking": true,
  "dart.useLegacyAnalyzerProtocol": false,
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "editor.lineNumbers": "on",
  "workbench.colorTheme": "One Dark Pro",
  "explorer.confirmDelete": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "security.promptForLocalFileProtocolHandling": false,
  "material-icon-theme.folders.theme": "specific",
  "window.titleBarStyle": "native",
  // Remove position indicator in the editor's scrollbar
  "editor.hideCursorInOverviewRuler": true,
  // Remove unnecessary controls from primary bar and tabs list
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": {
      "x": 11,
      "y": 10
    }
  },
  "apc.header": {
    "height": 36
  },
  "window.zoomLevel": -1,
}
